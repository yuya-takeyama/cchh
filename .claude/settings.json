{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ruff_hook.py"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "minimal-permission": {
      "command": "uv",
      "args": ["run", "python", "mcp-server/minimal_mcp_server.py"],
      "transport": "stdio",
      "description": "Minimal MCP server for permission testing"
    }
  }
}
